<h3>Books#index</h3>

<h1>Books</h1>
<table>
  <head>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <th></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </head>
</table>


      <h1>New book</h1>
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Opinion</h4>
          <%= f.text_area :body %>
        <br><%= f.submit 'Create Book' %>
        <% end %>

