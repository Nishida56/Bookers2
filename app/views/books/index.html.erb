<h3>Books#index　みんなの本が見れます</h3>

<h1>Books</h1>
<table>
  <head>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <th><%= image_tag book.user.get_profile_image(100,100) %></th>
      <th>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </head>
</table>


      <h1>New book</h1>
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Opinion</h4>
          <%= f.text_area :body %>
        <br><%= f.submit 'Create Book' %>
        <% end %>

