<%= render 'users/list_user', user: @user %>
<%= render 'books/list', book: @book %>

<h1>Book detail</h1>

<table>
  <head>
    <tr>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
      <th>
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
      </th>
      <th><%= @book.body %></th>
      <th>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book.id) %>
          <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
        <% end %>
      </th>
    </tr>
  </head>
</table>
<%= link_to @user.name, user_path(@user) %>