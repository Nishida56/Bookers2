<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div class="error_explanation">
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="book_title">Title</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :title , class: 'form-control book_title' , id: "book_title" %>
          </div>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body , class: 'form-control book_body' , id: "book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" , class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to 'Show', book_path %>|<%= link_to 'Back', books_path %>


    </div>
  </div>
</div>